{{!
    @template local_webuntis/selecttarget

    The purpose of this template is to show the block content.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * wwwroot
    * showwarning

    Example context (json):
    {
        "courses": [
            {
                "courseimage": "http://moodle-url.org/the-image-url",
                "fullname": 'fullname of course',
                "id": 123,
                "is_selected": 1,
                "shortname": 'shortname of course',
            },
        ]
    }
}}

<div id="local_webuntis_selecttarget_{{uniqid}}" class="local_webuntis selecttarget">
    <p>{{#str}} selectcourse_for_target, local_webuntis {{/str}}:</p>
    <table class="generaltable">
    {{#courses}}
        <tr class="course-{{id}}">
            <td class="trigger">
                <a href="#" onclick="require(['local_webuntis/main', function(M) { M.selectTarget('{{uniqid}}', {{id}}); }]); return false;">
                {{#is_selected}}
                    <i class="fa fa-icon fa-toggle-on" style="font-size: 18px;"></i>
                {{/is_selected}}
                {{^is_selected}}
                    <i class="fa fa-icon fa-toggle-off" style="font-size: 18px;"></i>
                {{/is_selected}}
                </a>
            </td>
            <td><img src="{{courseimage}}" style="height: 50px;" /></td>
            <td>{{fullname}}</td>
        </tr>
    {{/courses}}
    </table>
</div>
