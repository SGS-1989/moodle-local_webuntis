{{!
    @template local_webuntis/usersync_roles

    Bulk map roles of users.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * usermaps
    * wwwroot

    Example context (json):
    {
        "mappedusers": [
            {
                "moodle": [
                    "firstname": "",
                    "lastname": "",
                    ...
                ],
                "role": [
                    "role": "Teacher",
                    "orgid": 123,
                    ...
                ],
                "webuntis": [
                    "firstname": "",
                    "lastname": "",
                    ...
                ]
            }
        ],
        "wwwroot": 'https://x.yz.com'
    }
}}

<div class="local_webuntis usersync_create">
    <table class="generaltable" data-tenant_id="{{tenant_id}}">
        <thead>
            <tr>
                <th colspan="5" style="border-right: 1px solid lightgray;">WebUntis</th>
                <th rowspan="2">
                    <a href="#" class="btn btn-primary btn-block"
                        onclick="require(['local_webuntis/main'], function(M) { M.usersync_roles('{{uniqid}}'); }); return false;">
                        {{#str}} admin:usersync:rolesall, local_webuntis {{/str}}
                    </a>
                </th>
                <th colspan="5" style="border-right: 1px solid lightgray;">Moodle</th>
            </tr>
            <tr>
                <th>{{#str}} username {{/str}}</th>
                <th>{{#str}} firstname {{/str}}</th>
                <th>{{#str}} lastname {{/str}}</th>
                <th>{{#str}} email {{/str}}</th>
                <th>{{#str}} role {{/str}}</th>



                <th>{{#str}} role {{/str}}</th>
                <th>{{#str}} username {{/str}}</th>
                <th>{{#str}} firstname {{/str}}</th>
                <th>{{#str}} lastname {{/str}}</th>
                <th>{{#str}} email {{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#mappedusers}}
                <tr data-userid="{{m_id}}" data-orgid="{{orgid}}">
                    <td>{{w_username}}</td>
                    <td>{{w_firstname}}</td>
                    <td>{{w_lastname}}</td>
                    <td>{{w_email}}</td>
                    <td class="w_role">{{w_role}}</td>
                    <td class="sync-btn">
                        {{#role_differ}}
                        <a href="#" class="btn btn-secondary btn-block {{uniqid}}-rolesme"
                            onclick="var item = $(this); require(['local_webuntis/main'], function(M) { M.usersync_roles('{{uniqid}}', item); }); return false;">
                            {{#str}} admin:usersync:rolesuser, local_webuntis {{/str}}
                        </a>
                        {{/role_differ}}
                    </td>
                    <td class="m_role">{{m_role}}</td>
                    <td>{{m_username}}</td>
                    <td>{{m_firstname}}</td>
                    <td>{{m_lastname}}</td>
                    <td>{{m_email}}</td>
                </tr>
            {{/mappedusers}}
        </tbody>
    </table>
</div>
