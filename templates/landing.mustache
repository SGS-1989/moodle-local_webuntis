{{!
    @template local_webuntis/landing

    The purpose of this template is to show the block content.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * wwwroot
    * canedit
    * courses

    Example context (json):
    {
        "editurl": 'http://www.xy.z/local/webuntis/index.php?tenant_id=...',
        "courses": [
            {
                "courseimage": "http://moodle-url.org/the-image-url",
                "fullname": 'fullname of course',
                "id": 123,
                "is_selected": 1,
                "shortname": 'shortname of course',
            },
        ],
        "wwwroot": 'http://www.xy.z',
    }
}}

<div class="local_webuntis landing">
    {{#editurl}}
    <div style="float: right;">
        <a href="{{{editurl}}}" class="btn btn-primary">
            <i class="fa fa-gears"></i>&nbsp;
            {{#str}} edit {{/str}}
        </a>
    </div>
    {{/editurl}}
    <p>
        {{#str}} landing:select_target, local_webuntis {{/str}}:<br />
    </p>

    <table id="table-{{uniqid}}" class="generaltable">
    {{#courses}}
        <tr>
            <td width="50">
                <a href="{{wwwroot}}/course/view.php?id={{id}}">
                    <img src="{{courseimage}}" style="height: 50px;" />
                </a>
            </td>
            <td>
                <a href="{{wwwroot}}/course/view.php?id={{id}}">
                    {{fullname}}
                </a>
            </td>
        </tr>
    {{/courses}}
    </table>
</div>
