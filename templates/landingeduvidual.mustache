{{!
    @template local_webuntis/landingeduvidual

    Manage eduvidual-specific settings.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * orgs

    Example context (json):
    {
        "orgs":
            [
                "orgid": 9999991,
                "name": "testorg 1",
                [...]
            ],
            [
                "orgid": 9999992,
                "name": "testorg 2",
                [...]
            ],
    }
}}

<div class="local_webuntis landingeduvidual">
    <p>{{#str}} eduvidual:autoenrol_in_org, local_webuntis {{/str}}</p>
    {{#orgs}}
    <div id="orgmap_{{uniqid}}_{{orgid}}" class="card">
        <p class="col-md-12">
            <a href="#" onclick="require(['local_webuntis/main'], function(M) { M.orgMap('{{uniqid}}', {{orgid}}); }); return false;">
                <i class="fa fa-toggle-{{#isenabled}}on{{/isenabled}}{{^isenabled}}off{{/isenabled}}"></i>
                {{name}}
            </a>
        </p>
    </div>
    {{/orgs}}

    <table id="table-{{uniqid}}" class="generaltable">
    {{#courses}}
        <tr>
            <td class="trigger" width="30">
                <a href="#" id="trigger_{{uniqid}}_{{id}}" onclick="require(['local_webuntis/main'], function(M) { M.selectTarget('{{uniqid}}', {{id}}); }); return false;">
                {{#is_selected}}
                    <i class="fa fa-icon fa-toggle-on" style="font-size: 18px;"></i>
                {{/is_selected}}
                {{^is_selected}}
                    <i class="fa fa-icon fa-toggle-off" style="font-size: 18px;"></i>
                {{/is_selected}}
                </a>
            </td>
            <td width="50"><img src="{{courseimage}}" style="height: 50px;" /></td>
            <td>{{fullname}}</td>
        </tr>
    {{/courses}}
    </table>
</div>

{{#js}}
    $('#filter-{{uniqid}}').on("keyup", function() {
        var filter = $(this).val().toLowerCase();
        $('#table-{{uniqid}} tr').filter(function() {
            $(this).toggle($(this).text().toLowerCase().indexOf(filter) > -1);
        });
    });
{{/js}}
